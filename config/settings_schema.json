[
    {
        "name": "theme_info",
        "theme_name": "ThmsPark",
        "theme_version": "1.0.0",
        "theme_author": "Squeak",
        "theme_support_url": "https://support.shopify.com/",
        "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    },
    {
        "name": "Logo",
        "settings": [
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Upload logo",
                "info": "Use .png format"
            },
            {
                "type": "range",
                "id": "logo_width",
                "min": 50,
                "max": 300,
                "step": 5,
                "default": 100,
                "unit": "px",
                "label": "Logo size"
            },
            {
                "type": "image_picker",
                "id": "favicon",
                "label": "Upload favicon",
                "info": "48x48"
            }
        ]
    },
    {
        "name": "Colors",
        "settings": [
            {
                "type": "color_scheme_group",
                "id": "color_schemes",
                "definition": [
                    {
                        "type": "color",
                        "id": "background",
                        "label": "Background Color",
                        "default": "#FFFFFF"
                    },
                    {
                        "type": "color_background",
                        "id": "background_gradient",
                        "label": "Background Gradient",
                    },
                    {
                        "type": "color",
                        "id": "text",
                        "label": "Text color",
                        "default": "#121212"
                    },
                    {
                        "type": "color",
                        "id": "button",
                        "label": "Button Color",
                        "default": "#121212"
                    },
                    {
                        "type": "color",
                        "id": "button_label",
                        "label": "Button Label",
                        "default": "#FFFFFF"
                    },
                    {
                        "type": "color",
                        "id": "secondary_button_label",
                        "label": "Secondary button label",
                        "default": "#121212"
                    },
                    {
                        "type": "color",
                        "id": "shadow",
                        "label": "Shadow color",
                        "default": "#121212"
                    }
                ],
                "role": {
                    "text": "text",
                    "background": {
                        "solid": "background",
                        "gradient": "background_gradient"
                    },
                    "links": "secondary_button_label",
                    "icons": "text",
                    "primary_button": "button",
                    "on_primary_button": "button_label",
                    "primary_button_border": "button",
                    "secondary_button": "background",
                    "on_secondary_button": "secondary_button_label",
                    "secondary_button_border": "secondary_button_label"
                }
            }
        ]
    },
    {
        "name": "Layout",
        "settings": [
            {
                "type": "range",
                "id": "page_width",
                "min": 1000,
                "max": 1600,
                "step": 100,
                "default": 1200,
                "unit": "px",
                "label": "Page width"
            },
            {
                "type": "range",
                "id": "spacing_sections",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Space between template sections",
                "default": 0
            },
            {
                "type": "header",
                "content": "Grid"
            },
            {
                "type": "paragraph",
                "content": "Affects areas with multiple columns or rows"
            },
            {
                "type": "range",
                "id": "spacing_grid_horizontal",
                "min": 4,
                "max": 40,
                "step": 4,
                "default": 8,
                "unit": "px",
                "label": "Horizontal space"
            },
            {
                "type": "range",
                "id": "spacing_grid_vertical",
                "min": 4,
                "max": 40,
                "step": 4,
                "default": 8,
                "unit": "px",
                "label": "Vertical space"
            }
        ]
    },
    {
        "name": "Social Media",
        "settings": [
            {
                "type": "text",
                "id": "social_facebook_link",
                "label": " Facebook",
            },
            {
                "type": "text",
                "id": "social_instagram_link",
                "label": "Instagram",
            },
            {
                "type": "text",
                "id": "social_youtube_link",
                "label": "YouTube",
            },
            {
                "type": "text",
                "id": "social_tiktok_link",
                "label": "TikTok",
            },
            {
                "type": "text",
                "id": "social_twitter_link",
                "label": "X / Twitter",
            },
        ]
    },
]