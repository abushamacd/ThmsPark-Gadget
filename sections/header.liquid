<div id="menubar" class="dark:text-white text-black relative z-50 md:px-[20px] lg:px-0 py-[15px] md:py-0">
  <div
    id="navbar"
    class="container flex justify-between items-center top-0 left-0 right-0 !mx-auto border-b border-[#339C00]"
  >
    <div class="order-1 flex-1">
      <h2 class="text-2xl font-bold .font_bg">
        <a href="{{ shop.url }}" class="">{{ shop.name }}</a>
      </h2>
    </div>
    <div class="order-2 flex-2 hidden md:block">
      <ul class="mainmenu flex gap-6 justify-center items-center">
        <li><a href="#">Home</a></li>
        <li class="relative">
          <a class="flex justify-center items-center relative top-[2px]" href="#"
            >Shop
            <span class="text-white">{{- 'angle_up.svg' | inline_asset_content -}}</span>
          </a>
          <!-- Dropdown Menu -->
          <ul
            class="dropdown_menu absolute bg-white w-44 px-4 py-2 top-14 rounded-md dark:bg-[#333333]"
