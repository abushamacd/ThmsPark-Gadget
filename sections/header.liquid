            {{- 'compare.svg' | inline_asset_content -}}
            <span class="absolute -top-2 -right-2 h-5 w-5 rounded-full bg_primary text-white text-center text-sm"
              >2</span
            ></a
          >
        </li>
        <li class="relative">
          <a href="">
            {{- 'search.svg' | inline_asset_content -}}
          </a>
        </li>
      </ul>
    </div>
  </div>

