<div class="hero_section relative md:-mt-[59px] -mt-[70px]">
  <div class="slick_carousel">
    <!-- single banner -->
    {% for item in (1..3) %}
      <div class="single_banner relative">
        <img
          height=""
          width=" "
          src="https://elexy-demo.myshopify.com/cdn/shop/files/slider_1400.png"
          alt="Hero Image"
          class="w-full h-[500px] lg:h-screen object-cover"
        >
        {% comment %} <div class="overly absolute inset-0 bg-black/30"></div> {% endcomment %}
        <div class="overly opacity-30"></div>
        <div class="banner_info container absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-white transition-all duration-300 px-4 sm:px-6">
          <div class="flex flex-col md:flex-row md:justify-start md:items-center">
            <div class="w-full lg:w-1/2 text-center md:text-left space-y-4">
              <p class="text-base sm:text-lg md:text-xl tracking-wide">Lorem ipsum dolor sit amet.</p>
              <h1 class="text-3xl sm:text-5xl md:text-6xl lg:text-7xl font-bold capitalize leading-tight">
                Next generation Virtual reality
              </h1>
              <p class="text-sm sm:text-base md:text-lg">
                Lorem ipsum, dolor sit amet consectetur adipisicing elit. Suscipit qui animi eum natus soluta explicabo!
              </p>

              <div class="flex flex-wrap justify-center md:justify-start gap-3 mt-6">
                <button class="px-5 py-2 bg-white text-black rounded-full border border-white transition-all duration-300 hover:scale-105">
                  Shop Now
                </button>
                <button class="px-5 py-2 bg-transparent text-white rounded-full border border-white transition-all duration-300 hover:scale-105">
                  View More
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}

    <!-- /single banner -->
  </div>
</div>
